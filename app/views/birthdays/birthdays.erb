  <ul id="navlist-birth">
    <li id="active-birth"><a id="current-birth" href="/meetings/new">ADD MEETING</a></li>
    <li><a href="/birthdays/new">ADD BIRTHDAY</a></li>
    <li><a href="#">TAKE NOTES</a></li>
    <li><a href="/logout">SIGN OUT</a></li>
  </ul>

  <!-- End Top Menu -->
  <div id="sidebar-birth-a" >
    <h2>Activities</h2>
    <div class="menu-birth">
      <ul>
        <li><a href="/meetings">Meeting</a></li>
        <li><a href="/birthdays">Birthday</a></li>
        <li><a href="#">Notes</a></li>
      </ul>
